on:
  push:
    branches:
      - main
      name: Deploy to Staging

on:
  push:
    branches:
      - staging   # trigger when code is pushed to staging branch

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install

      - name: Build project
        run: npm run build

      - name: Deploy to Staging Server
        run: |
          ssh user@staging-server "cd /opt/projects/app && git pull origin staging && npm install && pm2 restart app"

